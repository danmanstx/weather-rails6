 <%= javascript_pack_tag 'initMap' %>
<main>
  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Address Search</h1>
        <p class="lead text-muted">find out weather below</p>
        <%= form_for :place, url: places_path  do |f| %>
          <div class='input-group'>
            <%= f.text_field :address, id:'address', class: 'form-control form-control-lg' %>
            <%= f.submit 'Search', class: 'btn btn-outline-secondary' %>
          </div>
        <% end %>

        <div class='forecast'> </div>
      </div>
    </div>
  </section>
</main>